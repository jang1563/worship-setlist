# WorshipFlow Environment Variables
# Copy this file to .env and fill in your values

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# YouTube Data API v3 (OPTIONAL - for real trend data)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in your Google Cloud project
# Free tier: 10,000 units/day (search=100 units, videos=1 unit, channels=1 unit)
# Without this key, the app will show demo/mock data
YOUTUBE_API_KEY=your-youtube-api-key-here

# Redis URL (OPTIONAL - for distributed caching)
# If not set, the app will use in-memory caching (15 min TTL)
# REDIS_URL=redis://localhost:6379/0

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/worshipflow.db

# Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256

# Application
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend
VITE_API_URL=http://localhost:8000
